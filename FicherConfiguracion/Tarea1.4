import sys
import netifaces


lista = netifaces.interfaces()

for interfaz in lista:
    #print(interfaz)
    inter = str(interfaz)
    #print (inter)
    info = netifaces.ifaddresses(inter)
    data= info[2]
    direccion = data[0]['addr']
    print("Tu interfaz: "+interfaz+" tiene la ip "+direccion)










sys.exit(0)
